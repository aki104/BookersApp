



<body class="main">

  <div class="container">
    <div class="row">

      <div class="col-lg-3" style="background-color: white;"> 

         <h2>User info</h2>
         <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
         <table class="table table-striped">
            <tr>
              <td>name<td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td>introdaction</td>
              <% if @user == current_user %>
              <td><%= current_user.introdaction %></td>
              <% end %>
            </tr>
         </table>

         <% if @user == current_user %>
          <%= link_to "", edit_user_path(current_user.id), class: "edit_user_#{current_user.id} col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
           <% else %>
          <%= link_to "", user_path(current_user.id), class: "user_#{current_user.id} col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% end %>
           <h3> New Book </h3>
            <%= form_for(@book) do |f| %>
            <h4>Title</h4>
           <%= f.text_field :title, class: "book_title" %>

            <h4>Opinion</h4>
            <%= f.text_field :opinion, class: "book_body" %>
            <p></p>
            <%= f.submit 'create Book', class: "btn btn-lg btn-block btn-base-1 mt-20 btn btn-primary col-xs-12" %>
            <% end %>
      </div>
      <div class="col-lg-9">

         <h1>Books</h1>

         <% if @book.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
         <table class="table table-striped">
           <thead>
             <tr>
               <th colspan="1"></th>
               <th>Title</th>
               <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 70, 70, format: "jpg", fallback: "no_image.jpg" %></td>
              <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
              <td> <%= book.opinion %></td>
            </tr>
          <% end %>
          </tbody>

        </table>


      </div>
    </div>
  </div>
</body>

 