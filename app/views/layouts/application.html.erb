<!DOCTYPE html>
<html>
  <head>
    <title>BookersApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 
 <!--  <style type="text/css">
a:link { color : gray; }
a:visited { color : gray; }
a:hover { color : white; }
-->
</style> 
</head>
<body>
  <div class=class="header" id="header">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h4 class="navbar" href="#">
            Bookers
          </h4>
        </div>
        <div class="collapse navbar-collapse .justify-content-end" class="navbar-text id="navbarEexample7" >
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right" >

            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-home" aria-hidden="true">  <%= link_to "Home", user_path(current_user.id), class: "home" %></span></li>

            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-user" aria-hidden="true">  <%= link_to "Users", users_path, class: "users" %></span></li>

            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-book" aria-hidden="true">  <%= link_to "Books", books_path, class: "books" %></span></li>

            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-log-out" aria-hidden="true">  <%= link_to "logout",destroy_user_session_path, class: "logout", method: :delete %></span></li>
          </ul>

        <% else %>

          <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-home" aria-hidden="true">  <%= link_to "Home", top_path, class: "home" %></span></li>

            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-link" aria-hidden="true">  <%= link_to "About", new_user_path, class: "about" %></span></li>

            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-edit" aria-hidden="true">  <%= link_to "sign up", new_user_registration_path, class: "sign_up" %></span></li>

            <li class="navbar-text"><a href="#"></a><span class="glyphicon glyphicon-log_in" aria-hidden="true">  <%= link_to "login", new_user_session_path, class: "sign_in" %></span></li>

          </ul>

        <% end %>
      </div>
    </div>
  </nav>
</div>

    <%= yield %>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</body>
</html>
