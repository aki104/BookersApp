<!-- マイページの編集画面 -->


 <h1>User info</h1>



    <%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
      <p>Name</p> <label class="control-label sr-only" for="inputName">Name</label>
      <%= f.text_field :name, class: "form-control name" , autofocus: true,  id:"inputName", placeholder:"名前"%>

      <p>Image</p>

      <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
      <%= f.attachment_field :profile_image, class: "user-edit-form user_image", placeholder: "プロフィール画像"%>
    </div>

        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>

      <p>introdaction</p><%= f.text_area :introdaction, class: "introduction" %>

      <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
      <% end %>

  </div>
    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>

